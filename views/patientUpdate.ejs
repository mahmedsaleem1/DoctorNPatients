<%- include('navbar') %>
<html>
<head>
    <title>Update Patient Info</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-3xl">
        <h1 class="text-2xl font-bold mb-6">Update Patient Information</h1>
        <form action="/api/v1/patient/updateOAuthPatient" method="POST" enctype="multipart/form-data">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-user text-gray-400 mr-2"></i>
                    <input type="text" name="fullname" placeholder="Full Name" class="w-full outline-none" required>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-calendar text-gray-400 mr-2"></i>
                    <input type="number" name="age" placeholder="Age" class="w-full outline-none" required>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-venus-mars text-gray-400 mr-2"></i>
                    <select name="gender" class="w-full outline-none" required>
                        <option value="" disabled selected>Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-phone text-gray-400 mr-2"></i>
                    <input type="text" name="contact" placeholder="Contact Number" class="w-full outline-none" required>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-lock text-gray-400 mr-2"></i>
                    <input type="password" name="password" placeholder="Password" class="w-full outline-none" required>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-image text-gray-400 mr-2"></i>
                    <input type="file" name="profile_picture" accept="image/*" required>
                </div>
            </div>
            <div class="flex justify-center mt-6">
                <button type="submit" class="bg-blue-500 text-white py-2 px-6 rounded-lg">Update Info</button>
            </div>
        </form>
    </div>
    <%- include('footer') %>

</body>
</html>
