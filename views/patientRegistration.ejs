<%- include('navbar') %>
<html>
<head>
    <title>Patient Registration</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-3xl">
        <h1 class="text-2xl font-bold mb-6">Patient Registration</h1>
        <form action="/api/v1/patient/register" method="POST" enctype="multipart/form-data">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-user text-gray-400 mr-2"></i>
                    <input type="text" name="fullname" placeholder="Full Name" class="w-full outline-none" required>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-birthday-cake text-gray-400 mr-2"></i>
                    <input type="number" name="age" placeholder="Age" class="w-full outline-none" required>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-venus-mars text-gray-400 mr-2"></i>
                    <select name="gender" class="w-full outline-none" required>
                        <option value="" disabled selected>Select Gender</option>
                        <option value="Male">Male</option>
                        <option value="Female">Female</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-phone text-gray-400 mr-2"></i>
                    <input type="text" name="contact" placeholder="Contact Number" class="w-full outline-none" required>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-envelope text-gray-400 mr-2"></i>
                    <input type="email" name="email" placeholder="Email" class="w-full outline-none" required>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-lock text-gray-400 mr-2"></i>
                    <input type="password" name="password" placeholder="Password" class="w-full outline-none" required>
                </div>
                <div class="flex items-center justify-center">
                    <h3 class="text-lg font-semibold text-gray-700">Profile Picture</h3>
                    <input type="file" name="profile_picture" class="w-full outline-none" required>
                </div>
            </div>
            <div class="flex justify-center mt-6">
                <button type="submit" class="bg-green-500 text-white py-2 px-6 rounded-lg">Register</button>
            </div>
            <br>
            <div class="flex justify-center mt-4">
                <a href="/auth/patient/google" class="bg-red-100 text-red-500 py-2 px-6 rounded-lg flex items-center justify-center">
                    <i class="fab fa-google mr-2"></i> Continue with Google
                </a>
            </div>
            <div class="text-center mt-6">
                <p class="text-sm text-gray-600">Already a Patient? <a href="/patientlogin" class="text-green-500 hover:underline">Sign In</a></p>
            </div>
        </form>
    </div>
    <%- include('footer') %>

</body>
</html>
