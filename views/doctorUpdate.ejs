<%- include('navbar') %>
<html>
<head>
    <title>Update Doctor Info</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
</head>
<body class="bg-gray-100 flex items-center justify-center min-h-screen">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-3xl">
        <h1 class="text-2xl font-bold mb-6">Update Doctor Information</h1>
        <form action="/api/v1/doctor/updateOAuthDoctor" method="POST" enctype="multipart/form-data">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-user text-gray-400 mr-2"></i>
                    <input type="text" name="fullname" placeholder="Full Name" class="w-full outline-none" required>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-stethoscope text-gray-400 mr-2"></i>
                    <input type="text" name="specialty" placeholder="Specialty" class="w-full outline-none" required>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-graduation-cap text-gray-400 mr-2"></i>
                    <input type="text" name="qualification" placeholder="Qualification" class="w-full outline-none" required>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-briefcase text-gray-400 mr-2"></i>
                    <input type="number" name="experience" placeholder="Experience (in years)" class="w-full outline-none" required>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-info-circle text-gray-400 mr-2"></i>
                    <textarea name="about" placeholder="About You" class="w-full outline-none resize-none" required></textarea>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-toggle-on text-gray-400 mr-2"></i>
                    <select name="availability" class="w-full outline-none" required>
                        <option value="" disabled selected>Availability Status</option>
                        <option value="Available">Available</option>
                        <option value="Not Available">Not Available</option>
                    </select>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-dollar-sign text-gray-400 mr-2"></i>
                    <input type="number" name="fee" placeholder="Consultation Fee" class="w-full outline-none" required>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-lock text-gray-400 mr-2"></i>
                    <input type="password" name="password" placeholder="Password" class="w-full outline-none" required>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-image text-gray-400 mr-2"></i>
                    <input type="file" name="profile_picture" accept="image/*" required>
                </div>
                <div class="flex items-center border border-gray-300 rounded-lg p-2">
                    <i class="fas fa-video text-gray-400 mr-2"></i>
                    <input type="file" name="video_intro" accept="video/*" required>
                </div>
            </div>
            <div class="flex justify-center mt-6">
                <button type="submit" class="bg-blue-500 text-white py-2 px-6 rounded-lg">Update Info</button>
            </div>
        </form>
    </div>
    <%- include('footer') %>

</body>
</html>
